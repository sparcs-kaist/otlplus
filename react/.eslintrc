{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": "eslint-config-airbnb",
  "globals": {
    "__DEV__": "readonly",
    "FormData": "readonly"
  },
  "plugins": [
    "no-loops",
    "fp"
  ],
  "rules": {
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/mouse-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,

    "arrow-body-style": "off",
    "arrow-parens": [2, "always"],
    "brace-style": [2, "stroustrup"],
    "comma-dangle": ["error", {"arrays": "always-multiline", "objects": "always-multiline", "imports": "always-multiline", "exports": "always-multiline", "functions": "only-multiline"}],
    "max-len": "warn",
    "no-nested-ternary": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true, "allowAfterSuper": true }],
    "no-unused-vars": ["error", {"args": "none"}],
    "object-shorthand": [1, "never"],
    "prefer-destructuring": "off",

    "import/prefer-default-export": "off",

    "react/button-has-type": "off",
    "react/destructuring-assignment": 1,
    "react/jsx-boolean-value": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/require-default-props": "off",
    "react/prefer-stateless-function": 0,
    "react/prop-types": [2, {"ignore": ["children", "match", "t", "i18n"]}],
    "react/no-unknown-property": 0,

    "no-loops/no-loops": "error",

    "fp/no-arguments": "warn",
    "fp/no-class": "off",
    "fp/no-delete": "warn",
    "fp/no-events": "warn",
    "fp/no-get-set": "warn",
    "fp/no-let": "warn",
    "fp/no-loops": "warn",
    "fp/no-mutating-assign": "warn",
    "fp/no-mutating-methods": "warn",
    "fp/no-mutation": ["warn", {"exceptions": [{"property": "propTypes"}, {"property": "defaultProps"}, {"property": "state"}, {"property": "interval"}, {"property": "scrollTop"}, {"property": "scrollLeft"}]}],
    "fp/no-nil": "off",
    "fp/no-proxy": "warn",
    "fp/no-rest-parameters": "warn",
    "fp/no-this": "off",
    "fp/no-throw": "warn",
    "fp/no-unused-expression": "off",
    "fp/no-valueof-field": "warn"
  }
}
